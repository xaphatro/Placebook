<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="4dp"
    android:padding="2dp"
    android:background="@drawable/myrect"
    android:onClick="goToItem">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/textviews"
        android:orientation="vertical"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/list_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:text=""
            android:textSize = "20sp"
            />

        <TextView
            android:layout_width="0px"
            android:layout_height="0px"
            android:id="@+id/list_id"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text=""
            android:textSize = "0sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/item_1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/list_title"
            android:layout_marginTop="2dp"
            android:text=""
            android:textSize = "15sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/item_2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/item_1"
            android:layout_marginTop="2dp"
            android:text=""
            android:textSize = "15sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/item_3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/item_2"
            android:layout_marginTop="2dp"
            android:text=""
            android:textSize = "15sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_delete"
            android:src="@drawable/ic_close_grey"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:padding="3dp"
            android:onClick="deleteList"
            android:background="#0fff"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_shareable"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/list_delete"
            android:layout_marginTop="2dp"
            android:layout_marginRight="0dp"
            android:onClick="changePermission"
            android:background="#0fff"
            />

    </RelativeLayout>



</LinearLayout>